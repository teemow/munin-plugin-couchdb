#!/usr/bin/env perl
###
### Munin plugin for CouchDB HTTP request monitoring
###

# Parameters:
#
# config
# autoconf

#%# family=auto
#%# capabilities=autoconf

=head1 NAME

couchdb_httpd_requests - Munin plugin to monitor the number of requests to
CouchDB servers.

=head1 APPLICABLE SYSTEMS

CouchDB servers with statistics enabled.

=head1 CONFIGURATION

=head2 Environment variables

=over

=item *

B<uri>: Set the URI for access to the _stats endpoint for the target CouchDB
instance. This defaults to B<http://localhost:5984/_stats?range=300>.

=back

=head1 INTERPRETATION

The plugin shows the total number of requests to the CouchDB server.

=head1 BUGS

Yep.

=head1 AUTHOR

Gordon Stratton <gordon.stratton@gmail.com>

=head1 LICENSE

Beerware

=cut

my $ret = undef;

if (!eval("require LWP::UserAgent;")) {
	$ret = "LWP::UserAgent not found";
}

if (!eval("require JSON;")) {
	$ret = "JSON not found";
}

my $URI = exists($ENV{'uri'}) ? $ENV{'uri'} : "http://localhost:5984/_stats?range=300";

if (defined($ARGV[0]) && $ARGV[0] eq "autoconf")
{
	if ($ret)
	{
		print "no ($ret)\n";
		exit 1;
	}

	my $response = LWP::UserAgent->new(timeout => 5)->request(HTTP::Request->new('GET', $URI));

	if ($response->is_success) {
		print "yes\n";
		exit 0;
	} else {
		print "no\n";
		exit 1;
	}
}

if (defined($ARGV[0]) && $ARGV[0] eq "config") {
	print "graph_title CouchDB httpd requests\n";
	print "graph_args --base 1000\n";
	print "graph_vlabel requests / \${graph_period}\n";
	print "graph_category couchdb\n";
	print "requests.label requests\n";
	print "requests.type COUNTER\n";
	print "requests.min 0\n";
	print "requests.max 1000000\n";
	print "bulk_requests.label bulk requests\n";
	print "bulk_requests.type COUNTER\n";
	print "bulk_requests.min 0\n";
	print "bulk_requests.max 1000000\n";
	print "view_reads.label view reads\n";
	print "view_reads.type COUNTER\n";
	print "view_reads.min 0\n";
	print "view_reads.max 1000000\n";
	exit 0;
}

my $response = LWP::UserAgent->new(timeout => 5)->request(HTTP::Request->new('GET', $URI));

if ($response->is_success) {
	my $json = JSON::decode_json($response->content);
	print "requests.value $json->{'httpd'}->{'requests'}->{'mean'}\n";
	print "bulk_requests.value $json->{'httpd'}->{'bulk_requests'}->{'mean'}\n";
	print "view_reads.value $json->{'httpd'}->{'view_reads'}->{'mean'}\n";
} else {
	print "requests.value U\n";
	print "bulk_requests.value U\n";
	print "view_reads.value U\n";
}

